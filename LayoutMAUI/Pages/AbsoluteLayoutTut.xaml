<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LayoutMAUI.Pages.AbsoluteLayoutTut"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="AbsoluteLayoutTut"
    BackgroundColor="White">
    <AbsoluteLayout>
        <Button
            AbsoluteLayout.LayoutBounds="10,20,200,50"
            BackgroundColor="#0061a7"
            Text="Fixed"
            TextColor="White" />

        <Button
            AbsoluteLayout.LayoutBounds="10,90,300,.2"
            AbsoluteLayout.LayoutFlags="HeightProportional"
            BackgroundColor="#0061a7"
            Text="Height Proportional"
            TextColor="White" />

        <Button
            AbsoluteLayout.LayoutBounds="10,250,.4,50"
            AbsoluteLayout.LayoutFlags="WidthProportional"
            BackgroundColor="#0061a7"
            Text="Width Proportional"
            TextColor="White" />

        <Button
            AbsoluteLayout.LayoutBounds="10,300,.4,.2"
            AbsoluteLayout.LayoutFlags="SizeProportional"
            BackgroundColor="#0061a7"
            Text="Size Proportional"
            TextColor="White" />
    </AbsoluteLayout>

</ContentPage>